{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noLib": false,
    "alwaysStrict": false,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "outDir": "./dist/"
  },
  "include": ["ts/**/*"],
  "exclude": [
    "dist",
    "samples",
    "node_modules"
  ]
}
